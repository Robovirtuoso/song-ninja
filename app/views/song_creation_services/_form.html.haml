= simple_form_for [current_user, @song_creation_service ], html: { class: 'form-inline' } do |f|
  = f.error_notification

  .controls.controls-row
    = f.input_field :band_name, input_html: { class: 'span3' }, placeholder: 'Band Name'
    = f.input_field :song_name, input_html: { class: 'span3' }, placeholder: 'Song Name'

  .controls
    = f.submit 'Add Song', class: 'add-song btn btn-success'
